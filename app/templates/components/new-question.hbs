{{#if addNewQuestion}}
 <h3>New Question</h3>
 <div id="new-form">
   <form>
     <div class="form-group">
       <label for="title">Question</label>
       {{input value=title id="title"}}
     </div>

     <div class="form-group">
       <label for="author">Author</label>
       {{input value=author id="author"}}
     </div>

     <div class="form-group">
       <label for="answer">Answer</label>
       {{input value=answer id="answer"}}
     </div>
     <button class="button btn-info" {{action 'saveQuestion1'}}>Save</button>
     <button class="button btn-info" {{action 'cancelQuestion'}}>Cancel</button>

   </form>

 </div>
{{else}}
  <button class="button btn-info" {{action 'qformShow'}}>New question</button>
{{/if}}
